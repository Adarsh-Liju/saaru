{% extends "base.jinja" %}

{% block main_template_content %}
<div class="frontmatter">
    <h2> {{frontmatter.title}} </h2>
    <h5> {{frontmatter.description}} </h5>
    <p>
        Tags: {% for tag in frontmatter.tags %}
        {{ tag }}
        {% endfor %}
    </p>
</div>
<div class="post">
    {{postcontent | safe}}
</div>
{% endblock %}
